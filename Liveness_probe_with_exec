apiVersion: v1
kind: Pod
metadata:
  name: hello-app-liveness-pod
spec:
  containers:
  - name: hello-app-container
    image: nginx
    ports:
    - containerPort: 80
    livenessProbe:
      exec:
        command:
        - /bin/sh
        - -c
        - "curl -f http://localhost:80 || exit 1"
      initialDelaySeconds: 15
      periodSeconds: 10
      timeoutSeconds: 1
      failureThreshold: 3
